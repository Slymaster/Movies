<Window x:Class="Movies.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Movies"
        mc:Ignorable="d"
        Title="LogIn" Height="450" Width="800">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="100,160,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="200,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <PasswordBox HorizontalAlignment="Left" Margin="200,160,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Se connecter" HorizontalAlignment="Left" Margin="200,220,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.233,-0.596"/>
        <Label Content="Vous n'avez pas de compte ?" HorizontalAlignment="Left" Margin="500,100,0,0" VerticalAlignment="Top"/>
        <Button Content="S'inscrire" HorizontalAlignment="Left" Margin="520,160,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.233,-0.596"/>

    </Grid>
</Window>
